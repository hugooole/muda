load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test", "cc_binary")

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "catch-main",
    srcs = ["main.cpp"],
    includes = ["../external"],
    deps = [
        "//external/catch2:catch2",
    ],
)

cc_test(
    name = "test",
    srcs = ["test.cpp"],
    copts = [
        "-std=c++17",
    ],
    includes = ["../external"],
    deps = [
        ":catch-main",
        "//external/catch2:catch2",
    ],
)

test_suite(
    name = "all-tests",
    tests = [":test"],
)
